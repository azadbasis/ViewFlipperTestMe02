<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trip"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="162dp"
        android:layout_marginEnd="13dp"
        android:background="@android:color/transparent"
        android:text="SIGNUP"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        android:alpha="0.37"
        app:srcCompat="@drawable/backwhite" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_local_taxi_black_24dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        android:layout_marginEnd="13dp"
        android:background="@android:color/transparent"
        android:text="LOGIN"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/button2"
        android:layout_centerHorizontal="true"
        android:alpha="0.7"
        app:srcCompat="@drawable/backgreen" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:rotation="45"
        app:srcCompat="@drawable/ic_flight_black_24dp"
        android:layout_alignTop="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <ViewFlipper
        android:id="@+id/flip"
        android:layout_width="170dp"
        android:layout_height="85dp"
        android:layout_marginBottom="57dp"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/button">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_directions_bus_black_24dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_flight_black_24dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_local_taxi_black_24dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_terrain_black_24dp" />

    </ViewFlipper>

</RelativeLayout>